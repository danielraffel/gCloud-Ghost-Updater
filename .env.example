# Copy this file to .env and adjust values as needed.

# SSH username for connecting to the VM (default: service_account)
SSH_USER=service_account

# Path to SSH private key. If unset or file missing, ssh falls back to agent/default identities. (default: $HOME/.ssh/gcp)
SSH_KEY_PATH=$HOME/.ssh/gcloud

# Path to get_latest_node_version.js (default: <repo>/get_latest_node_version.js)
LOCAL_NODE_VERSION_SCRIPT=get_latest_node_version.js

# Disk snapshot policy name to attach to new VM (default: daily-backup-schedule)
RESOURCE_POLICY_NAME=daily-backup-schedule

# Machine types for speedy upgrade/downgrade flow (defaults: e2-medium / e2-micro)
SPEEDY_MACHINE_TYPE=e2-medium
NORMAL_MACHINE_TYPE=e2-micro

# SSH tuning
# Timeout per probe attempt in seconds (default: 10)
SSH_CONNECT_TIMEOUT=10
# Max attempts to check SSH readiness (default: 36)
SSH_MAX_ATTEMPTS=36
# Sleep seconds between attempts (default: 5)
SSH_RETRY_SLEEP=5

# Runs pre-check: SSH-es to current VM, runs ghost version, compares to latest release, exits 0 early if already up-to-date
AUTO_PRECHECK=true
